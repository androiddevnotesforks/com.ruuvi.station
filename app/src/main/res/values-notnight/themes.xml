<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/titan80</item>
        <item name="colorDisabled">@color/disabledText</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="colorSurfaceVariant">@color/success25</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorHeaderSurface">@color/backgroundLight</item>
        <item name="colorOnHeaderSurface">@color/mainDark</item>
        <item name="colorToolbar">@color/titan</item>

        <item name="colorPrimary">@color/titan80</item>
        <item name="colorPrimaryDark">@color/titan</item>
        <item name="colorAccent">@color/ruuviNew</item>
        <item name="android:textColorHint">@color/titan30</item>
        <item name="colorButtonText">@color/white</item>

        <item name="colorDivider">@color/lines</item>
        <item name="colorErrorText">@color/error</item>
        <item name="colorSuccessText">@color/success</item>

        <item name="colorControlNormal">@color/pastelGray</item>
        <item name="colorControlActivated">?attr/colorAccent</item>

        <item name="android:autofilledHighlight" tools:targetApi="26">@android:color/transparent</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/titan80</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:windowBackground">@drawable/dialog_inset</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitleStyle</item>
        <item name="android:textAppearanceMedium">@style/Paragraph</item>
    </style>
</resources>