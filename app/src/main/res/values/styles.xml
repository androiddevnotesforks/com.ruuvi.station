<resources>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Subtitle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textSubtitleSize</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
    </style>

    <style name="Subtitle.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Paragraph">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textParagraphSize</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
    </style>
    <style name="Paragraph.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ParagraphSmall">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textParagraphSmallSize</item>
        <item name="lineHeight">@dimen/textLineSmallHeight</item>
        <item name="fontFamily">@font/mulish_regular</item>
    </style>

    <style name="ParagraphSmall.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold_ttf</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PreferencesListItemSubtitle" parent="Subtitle">
    </style>

    <style name="PreferencesListItemDescription" parent="ParagraphSmall">
    </style>

    <style name="PrefSecondaryTextState">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainDark</item>
    </style>

    <style name="WelcomeText">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="singleLine">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextViewLink">
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">@color/href</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/big</item>
        <item name="android:paddingRight">@dimen/big</item>
        <item name="android:paddingBottom">@dimen/tiny</item>
        <item name="android:textSize">@dimen/textParagraphSize</item>
        <item name="android:fontFamily">@font/mulish_extrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundButton" parent="Button">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="SwitchStyle" parent="Subtitle"/>

    <style name="SwitchStyle.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Input" parent="Subtitle">

    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textParagraphSize</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
        <item name="android:paddingTop">@dimen/normalPlus</item>
        <item name="android:paddingBottom">@dimen/normalPlus</item>
    </style>

    <style name="sensorSettingInfoTitleStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/tag_settings_text_padding</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sensorSettingWarningStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">@dimen/tag_settings_text_padding</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sensorSettingInfoValueStyle">
        <item name="android:gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/tag_settings_text_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorDisabled</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_inset</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitleStyle</item>
    </style>

    <style name="CustomDialogTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="sensorSettingGroupHeaderStyle">
        <item name="android:background">?attr/colorHeaderSurface</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:padding">@dimen/tag_settings_text_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnHeaderSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="progressStyle">
        <item name="colorAccent">@color/main</item>
    </style>

    <style name="Widget.Comruuvistation.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Widget.Comruuvistation.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CodeEditStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="onboardingButtonStyle">
        <item name="android:background">@drawable/border_button</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
