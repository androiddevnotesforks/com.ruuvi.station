<resources>
    <style name="AppTheme.Animated" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/listItemHeight</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Animated">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentNavigation" parent="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Digits">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textTitleSize</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="lineHeight">@dimen/titleLineHeight</item>
    </style>

    <style name="Title">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textTitleSize</item>
        <item name="fontFamily">@font/mulish_extrabold</item>
        <item name="lineHeight">@dimen/titleLineHeight</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textSubtitleSize</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
    </style>

    <style name="Subtitle.WithPadding">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Paragraph">
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textParagraphSize</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
    </style>

    <style name="Paragraph.Secondary" parent="Paragraph">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Paragraph.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ParagraphSmall">
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textParagraphSmallSize</item>
        <item name="lineHeight">@dimen/textSmallLineHeight</item>
        <item name="fontFamily">@font/mulish_regular</item>
    </style>

    <style name="SensorScreenParagraphSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textSize">@dimen/textParagraphSmallSize</item>
        <item name="lineHeight">@dimen/textSmallLineHeight</item>
        <item name="fontFamily">@font/mulish_regular</item>
    </style>


    <style name="ParagraphSmall.Secondary" parent="ParagraphSmall">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="ParagraphSmall.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ParagraphLink" parent="Paragraph.WithPadding">
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">?colorAccent</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold_ttf</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PreferencesListItemSubtitle" parent="Subtitle">
    </style>

    <style name="PreferencesListItemDescription" parent="ParagraphSmall">
    </style>

    <style name="PrefSecondaryTextState">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainDark</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="WelcomeText">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/extended</item>
        <item name="android:paddingEnd">@dimen/extended</item>
        <item name="singleLine">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar.TransparentNavigation">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:paddingLeft">@dimen/big</item>
        <item name="android:paddingRight">@dimen/big</item>
        <item name="android:paddingBottom">@dimen/tiny</item>
        <item name="android:textSize">@dimen/textParagraphSize</item>
        <item name="android:fontFamily">@font/mulish_extrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundButton" parent="Button">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="SwitchStyle">
        <item name="thumbTint">@color/color_switch_thumb</item>
        <item name="trackTint">@color/color_switch_track</item>
        <item name="thumbElevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textSubtitleSize</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
    </style>

    <style name="SwitchStyle.WithPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Input" parent="Paragraph">
    </style>

    <style name="Scrollbars">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">?colorAccent</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textParagraphSize</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
        <item name="android:paddingTop">@dimen/normalPlus</item>
        <item name="android:paddingBottom">@dimen/normalPlus</item>
    </style>

    <style name="SensorSettingTitleStyle" parent="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sensorSettingsHeaderHeight</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">?attr/colorSurfaceVariant</item>
        <item name="android:padding">@dimen/tag_settings_text_padding</item>
    </style>

    <style name="SensorSettingSubtitleStyle" parent="Subtitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/sensorSettingsItemHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingEnd">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingTop">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingBottom">@dimen/tag_settings_text_padding</item>
    </style>

    <style name="SensorSettingValueStyle" parent="Paragraph">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/sensorSettingsItemHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:paddingStart">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingEnd">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingTop">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingBottom">@dimen/tag_settings_text_padding</item>
    </style>

    <style name="SensorSettingSubtitleSmallStyle" parent="SensorSettingSubtitleStyle">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:minHeight">@dimen/sensorSettingsItemSmall</item>
        <item name="android:paddingTop">@dimen/tag_settings_text_padding_small</item>
        <item name="android:paddingBottom">@dimen/tag_settings_text_padding_small</item>
    </style>

    <style name="SensorSettingValueSmallStyle" parent="SensorSettingValueStyle">
        <item name="android:minHeight">@dimen/sensorSettingsItemSmall</item>
        <item name="android:paddingTop">@dimen/tag_settings_text_padding_small</item>
        <item name="android:paddingBottom">@dimen/tag_settings_text_padding_small</item>
    </style>

    <style name="SensorSettingWarningStyle" parent="Paragraph">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingEnd">@dimen/tag_settings_text_padding</item>
        <item name="android:paddingTop">@dimen/tag_settings_text_padding_small</item>
        <item name="android:paddingBottom">@dimen/tag_settings_text_padding_small</item>
    </style>

    <style name="CustomDialogTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/textSubtitleSize</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="progressStyle">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="Widget.Comruuvistation.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Widget.Comruuvistation.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CodeEditStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="onboardingButtonStyle">
        <item name="android:background">@drawable/border_button</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">?attr/colorDivider</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_right</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textSubtitleSize</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="lineHeight">@dimen/textLineHeight</item>
    </style>
</resources>
