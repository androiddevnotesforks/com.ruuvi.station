<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorDisabled">@color/disabledText</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorSurfaceVariant">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorHeaderSurface">@color/dark_emerald</item>
        <item name="colorOnHeaderSurface">@color/backgroundLight</item>

        <item name="colorPrimary">@color/white80</item>
        <item name="colorPrimaryDark">@color/darkGray</item>
        <item name="colorAccent">@color/ruuviNew</item>
        <item name="android:textColorHint">@color/white30</item>
        <item name="colorButtonText">@color/white</item>

        <item name="colorErrorText">@color/error</item>
        <item name="colorSuccessText">@color/success</item>

        <item name="colorControlNormal">@color/pastelGray</item>
        <item name="colorControlActivated">?attr/colorAccent</item>

        <item name="android:autofilledHighlight" tools:targetApi="26">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppWidgetContainerParent" parent="AppTheme">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">8dp</item>

        <item name="colorPrimary">@color/ruuviLight50</item>
        <item name="colorSurface">@color/dark_emerald</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSecondary">@color/grayNew</item>
        <item name="colorControlHighlight">@color/grayNew5</item>
    </style>
</resources>