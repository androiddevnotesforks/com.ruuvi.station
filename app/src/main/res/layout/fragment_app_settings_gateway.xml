<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.ui.AppSettingsGatewayFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/gatewayUrlTitleTextView"
                    style="@style/PrefTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gateway_url" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/gatewayUrlEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/gateway_url_hint"
                    android:maxLength="255" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/deviceIdTitleTextView"
                    style="@style/PrefTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/device_identifier" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/deviceIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="32" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/gatewayTestButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test_gateway"
                    android:layout_marginTop="8dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/gatewayTestResultTextView"
                    style="@style/PrefTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/settingsInfoTextView"
                    android:text="@string/settings_gateway_details"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>